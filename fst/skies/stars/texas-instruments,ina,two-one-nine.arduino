void wireWriteRegister

(

uint8_t ina219_i2caddr,

uint8_t reg,

uint16_t value

)

{




Wire . beginTransmission ( ina219_i2caddr );




#if ARDUINO >= 100


Wire . write(reg);                       // Register

Wire . write((value >> 8) & 0xFF);       // Upper 8-bits

Wire . write(value & 0xFF);              // Lower 8-bits




#else


Wire.send(reg);                        // Register

Wire . send(value >> 8);                 // Upper 8-bits

Wire . send(value & 0xFF);               // Lower 8-bits


#endif




Wire . endTransmission();




}






















void wireReadRegister

(

uint8_t ina219_i2caddr,

uint8_t reg,

uint16_t * value

)

{




Wire . beginTransmission ( ina219_i2caddr );




#if ARDUINO >= 100


Wire . write ( reg );




#else


Wire . send ( reg );


#endif




Wire . endTransmission ();




// Max 12-bit conversion time is 586us per sample

delay ( 1 );




Wire . requestFrom ( ina219_i2caddr, (uint8_t)2 ); 




#if ARDUINO >= 100


// Shift values to create properly formed integer

* value = ( ( Wire . read () << 8 ) | Wire . read () );




#else


// Shift values to create properly formed integer

* value = ( ( Wire . receive () << 8 ) | Wire . receive () );




#endif




}






















void setup() {}





void loop()

{



















// create


uint8_t ina219_i2caddr = ( 0x40 );

uint32_t ina219_calValue = 0;


uint32_t ina219_currentDivider_mA = 0;

uint32_t ina219_powerDivider_mW = 0;




















// begin

pinMode ( PIN_LED0, OUTPUT );

digitalWrite ( PIN_LED0, LOW );









digitalWrite ( PIN_LED0, LOW );




digitalWrite ( PIN_LED0, HIGH );

delay ( 100 );

digitalWrite ( PIN_LED0, LOW );

delay ( 100 );

digitalWrite ( PIN_LED0, HIGH );

delay ( 100 );

digitalWrite ( PIN_LED0, LOW );

delay ( 100 );

digitalWrite ( PIN_LED0, HIGH );

delay ( 100 );

digitalWrite ( PIN_LED0, LOW );








Serial . begin ( 9600 );

Wire . begin ();




















// set

ina219_calValue = 4096;

ina219_currentDivider_mA = 10;

ina219_powerDivider_mW = 2;








wireWriteRegister

(

ina219_i2caddr,

( 0x05 ),

ina219_calValue

);







// set 32v 2a

uint16_t config = ( 0x2000 ) |

                  ( 0x1800 ) |

                  ( 0x0400 ) |

                  ( 0x0018 ) |

                  ( 0x0007 );








wireWriteRegister

(

ina219_i2caddr,

( 0x00 ),

config

);

























digitalWrite ( PIN_LED0, HIGH );













while ( 1 )

{








digitalWrite ( PIN_LED0, LOW );



















// get


float shuntvoltage = 0;

float busvoltage = 0;

float current_mA = 0;

float loadvoltage = 0;
















uint16_t value = 0;




wireReadRegister

(

ina219_i2caddr,

( 0x01 ),

& value

);




shuntvoltage = 0.01 * ( int16_t ) value;
















value = 0;




wireReadRegister

(

ina219_i2caddr,

( 0x01 ),

& value

);




busvoltage = 0.001 * 4 * ( ( int16_t ) value >> 3 );
















value = 0;


float valueDec = 0;




wireWriteRegister

(

ina219_i2caddr,

( 0x05 ),

ina219_calValue

);




wireReadRegister

(

ina219_i2caddr,

( 0x01 ),

&value

);




valueDec = ( int16_t ) value;




valueDec = valueDec /  ina219_currentDivider_mA;




current_mA = valueDec;






















// print

Serial . print ( "bus voltage:   " );

Serial . print ( busvoltage );

Serial . println ( " v" );


Serial . print ( "shunt voltage: " );

Serial . print ( shuntvoltage );

Serial . println ( " mv" );


Serial . print ( "load voltage:  " );

Serial . print ( loadvoltage );

Serial . println ( " v" );


Serial . print ( "current:       " );

Serial . print ( current_mA );

Serial . println ( " ma" );




Serial . println ( "" );









digitalWrite ( PIN_LED0, HIGH );









delay ( 100 );






















}








digitalWrite ( PIN_LED0, LOW );


Serial . end ();

//Wire . end ();









}

